<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kevin.comandovoz.MainActivity">


    <ImageView
        android:id="@+id/image1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="280dp"
        android:layout_marginEnd="51dp"
        app:srcCompat="@drawable/movil2" />

    <Button
        android:id="@+id/btnenceder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/image1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="96dp"
        android:layout_marginEnd="70dp"
        android:text="ENCENDER" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnenceder"
        android:layout_alignStart="@+id/btnenceder"
        android:layout_marginBottom="64dp"
        android:text=""
        android:textSize="25dp"/>


</RelativeLayout>
